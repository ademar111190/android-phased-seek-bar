<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <ademar.playground.PhasedSeekBar
        android:id="@+id/psb_hor"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:phased_anchor_height="@dimen/test_anchor_size"
        app:phased_anchor_width="@dimen/test_anchor_size"
        app:phased_base_background="@drawable/bg"
        app:phased_base_margin_bottom="@dimen/test_bottom_padding"
        app:phased_base_margin_left="@dimen/test_left_padding"
        app:phased_base_margin_right="@dimen/test_right_padding"
        app:phased_base_margin_top="@dimen/test_top_padding"
        app:phased_item_height="@dimen/test_item_size"
        app:phased_item_width="@dimen/test_item_size"
        app:phased_mode="horizontal"/>

    <ademar.playground.PhasedSeekBar
        android:id="@+id/psb_like"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_below="@+id/psb_hor"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        app:phased_anchor_height="40dp"
        app:phased_anchor_width="40dp"
        app:phased_base_background="@drawable/bg_likebar"
        app:phased_base_margin_bottom="10dp"
        app:phased_base_margin_left="30dp"
        app:phased_base_margin_right="30dp"
        app:phased_base_margin_top="10dp"
        app:phased_draw_on_off="true"
        app:phased_fix_point="false"
        app:phased_item_height="80dp"
        app:phased_item_width="80dp"
        app:phased_mode="vertical"/>

    <ademar.playground.PhasedSeekBar
        android:id="@+id/psb_star"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_below="@+id/psb_hor"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        app:phased_anchor_height="40dp"
        app:phased_anchor_width="40dp"
        app:phased_base_background="@drawable/bg_starbar"
        app:phased_base_margin_bottom="10dp"
        app:phased_base_margin_left="30dp"
        app:phased_base_margin_right="30dp"
        app:phased_base_margin_top="10dp"
        app:phased_draw_on_off="false"
        app:phased_fix_point="true"
        app:phased_item_height="80dp"
        app:phased_item_width="80dp"
        app:phased_mode="vertical"/>

    <ademar.playground.PhasedSeekBar
        android:id="@+id/psb_no_images"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/psb_hor"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        app:phased_anchor_height="30dp"
        app:phased_anchor_width="30dp"
        app:phased_base_background="#669900"
        app:phased_base_margin_bottom="10dp"
        app:phased_base_margin_left="30dp"
        app:phased_base_margin_right="30dp"
        app:phased_base_margin_top="10dp"
        app:phased_draw_on_off="false"
        app:phased_fix_point="true"
        app:phased_item_height="60dp"
        app:phased_item_width="60dp"
        app:phased_mode="vertical"
        tools:ignore="RtlHardcoded"/>

</RelativeLayout>
